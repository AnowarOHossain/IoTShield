# ==============================
# IoTShield Environment Variables
# Copy this file to .env and configure your settings
# ==============================

# Django Settings
SECRET_KEY=django-insecure-change-this-to-a-random-secret-key-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (SQLite by default)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For MySQL (uncomment and configure):
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=iotshield_db
# DB_USER=your_mysql_user
# DB_PASSWORD=your_mysql_password
# DB_HOST=localhost
# DB_PORT=3306

# MQTT Broker Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_KEEPALIVE=60

# MQTT Topics (default values, can be customized)
MQTT_TOPIC_SENSORS=iotshield/sensors/data
MQTT_TOPIC_ANOMALIES=iotshield/anomalies
MQTT_TOPIC_ALERTS=iotshield/alerts
MQTT_TOPIC_CONTROL=iotshield/control/commands
MQTT_TOPIC_LOGS=iotshield/logs

# Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Privacy Settings
# Epsilon: Lower values = more privacy, less accuracy (0.1-1.0)
PRIVACY_NOISE_EPSILON=0.5
PRIVACY_NOISE_DELTA=1e-5

# ML Model Settings
# Threshold for anomaly detection (0.0-1.0)
ANOMALY_THRESHOLD=0.7
MODEL_PATH=ml_models/model.pkl

# Security Settings (for production)
USE_TLS=False
MQTT_TLS_CERT_PATH=
MQTT_TLS_KEY_PATH=
