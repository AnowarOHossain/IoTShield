{
  "device": {
    "device_id": "ESP32_SIM_001",
    "device_name": "Living Room Sensor Hub",
    "device_type": "SIMULATOR",
    "location": "Living Room",
    "publish_interval": 5
  },
  "mqtt": {
    "broker_host": "localhost",
    "broker_port": 1883,
    "username": "",
    "password": "",
    "topic_sensors": "iotshield/sensors/data",
    "topic_control": "iotshield/control/commands"
  },
  "privacy": {
    "enable_noise": false,
    "noise_epsilon": 0.5,
    "noise_type": "gaussian"
  },
  "sensors": {
    "temperature": {
      "base_value": 25,
      "variance": 3,
      "anomaly_chance": 0.04
    },
    "humidity": {
      "base_value": 60,
      "variance": 10,
      "anomaly_chance": 0.03
    },
    "gas": {
      "base_value": 0.08,
      "variance": 0.02,
      "anomaly_chance": 0.015
    },
    "flame": {
      "base_value": 0,
      "anomaly_chance": 0.008
    },
    "motion": {
      "base_value": 0,
      "base_intensity": 0.3,
      "activity_chance": 0.25
    },
    "light": {
      "base_value": 300,
      "variance": 100,
      "anomaly_chance": 0.025
    }
  }
}
